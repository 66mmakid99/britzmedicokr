---
import BaseLayout from '@layouts/BaseLayout.astro';
import SchemaOrg from '@components/aeo/SchemaOrg.astro';
import ProductShowcase from '@components/interactive/ProductShowcase.tsx';
import UpdateDate from '@components/common/UpdateDate.astro';
import { organizationSchema } from '@lib/schema';
import { getAllPosts } from '@data/blog';

const latestPosts = getAllPosts().slice(0, 4);
---

<BaseLayout>
  <SchemaOrg schema={organizationSchema()} slot="head" />

  <!-- Hero 섹션 — 풀스크린 시네마틱 + 동영상 배경 -->
  <section class="relative flex min-h-screen items-center overflow-hidden">
    <!-- 배경: 동영상 우선, 없으면 CSS 그래디언트 폴백 -->
    <div class="absolute inset-0 z-0">
      <video
        autoplay muted loop playsinline
        poster="/images/hero-poster.jpg"
        class="absolute inset-0 hidden h-full w-full object-cover md:block"
      >
        <source src="/videos/hero.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-black/60"></div>
      <!-- CSS 폴백 배경 (동영상 없을 때 자동 표시) -->
      <div class="absolute inset-0 -z-10 bg-[#0A0E1A]">
        <div class="animate-float absolute -top-40 -left-40 h-[600px] w-[600px] rounded-full bg-blue-600/20 blur-[120px]"></div>
        <div class="animate-float-slow absolute -right-20 -bottom-20 h-[500px] w-[500px] rounded-full bg-indigo-500/15 blur-[100px]"></div>
        <div class="absolute top-1/2 left-1/2 h-[300px] w-[300px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-cyan-400/10 blur-[80px]"></div>
      </div>
    </div>

    <div class="relative mx-auto grid max-w-7xl items-center gap-12 px-4 py-32 sm:px-6 lg:grid-cols-2 lg:px-8">
      <!-- 좌: 텍스트 -->
      <div>
        <span class="inline-block rounded-full border border-blue-400/30 px-4 py-1.5 text-xs uppercase tracking-[0.3em] text-blue-400">
          Toroidal RF Technology
        </span>
        <h1 class="mt-8 text-5xl font-bold leading-[1.1] tracking-tight text-white md:text-6xl lg:text-7xl">
          토로이달 RF 기술로<br />
          <span class="bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">피부 미용의 새로운 기준</span>
        </h1>
        <p class="mt-6 max-w-xl text-lg leading-relaxed text-slate-400 md:text-xl">
          브리츠메디는 토로이달 코일 기반 Multi-wave RF 기술로 피부 미용 의료기기를 개발·제조하는 한국 기업입니다.
        </p>
        <div class="mt-10 flex gap-4">
          <a href="/contact" class="rounded-full bg-white px-8 py-4 text-base font-semibold text-slate-900 transition-all hover:bg-blue-50 hover:shadow-lg">
            상담 신청
          </a>
          <a href="/products" class="rounded-full border border-white/30 px-8 py-4 text-base font-semibold text-white transition-all hover:bg-white/10">
            제품 알아보기
          </a>
        </div>
      </div>

      <!-- 우: 글래스모피즘 카드 -->
      <div class="hidden items-center justify-center lg:flex">
        <div class="flex h-[500px] w-[400px] flex-col items-center justify-center rounded-3xl border border-white/10 bg-white/5 backdrop-blur-sm">
          <p class="text-7xl font-bold text-white/20">TORR</p>
          <p class="mt-2 text-lg font-semibold text-white/60">RF</p>
          <div class="mt-8 grid grid-cols-3 gap-6 text-center">
            <div>
              <p class="text-2xl font-bold text-blue-400">360°</p>
              <p class="mt-1 text-[10px] uppercase tracking-wider text-slate-500">Uniform</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-blue-400">3</p>
              <p class="mt-1 text-[10px] uppercase tracking-wider text-slate-500">MHz Wave</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-blue-400">FDA</p>
              <p class="mt-1 text-[10px] uppercase tracking-wider text-slate-500">Cleared</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 스크롤 인디케이터 -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce text-white/40">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- 솔루션 쇼케이스 — 탭 전환 -->
  <ProductShowcase client:load />

  <!-- 왜 브리츠메디 -->
  <section class="reveal bg-slate-50 px-4 py-20 sm:px-6 lg:px-8 md:py-28">
    <div class="mx-auto max-w-7xl">
      <div class="mb-12 text-center">
        <h2 class="mb-3 text-3xl font-bold tracking-tight text-slate-900 md:text-4xl">왜 브리츠메디인가</h2>
      </div>
      <div class="reveal-stagger grid gap-8 md:grid-cols-3">
        <!-- 독자적 토로이달 RF 기술 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-md">
          <div class="mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 text-blue-600">
            <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.59.659H9.06a2.25 2.25 0 01-1.591-.659L5 14.5m14 0V17a2.25 2.25 0 01-2.25 2.25H7.25A2.25 2.25 0 015 17v-2.5" />
            </svg>
          </div>
          <h3 class="mb-3 text-lg font-bold text-slate-900">독자적 토로이달 RF 기술</h3>
          <p class="text-sm leading-relaxed text-slate-600">기존 모노폴라/바이폴라 방식 대비 균일한 에너지 전달과 깊은 침투 깊이를 구현하는 특허 기술입니다.</p>
        </div>
        <!-- 40개국+ 글로벌 파트너 네트워크 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-md">
          <div class="mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 text-blue-600">
            <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5a17.92 17.92 0 01-8.716-2.247m0 0A8.966 8.966 0 013 12c0-1.777.516-3.434 1.404-4.832" />
            </svg>
          </div>
          <h3 class="mb-3 text-lg font-bold text-slate-900">40개국+ 글로벌 파트너 네트워크</h3>
          <p class="text-sm leading-relaxed text-slate-600">전 세계 40개국 이상의 파트너 네트워크를 통해 글로벌 시장에서 입증된 브랜드입니다.</p>
        </div>
        <!-- FDA/CE/ISO 트리플 인증 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-md">
          <div class="mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 text-blue-600">
            <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
          </div>
          <h3 class="mb-3 text-lg font-bold text-slate-900">FDA/CE/ISO 트리플 인증</h3>
          <p class="text-sm leading-relaxed text-slate-600">FDA 510(k), CE Mark, ISO 13485 등 주요 글로벌 의료기기 인증을 획득하여 품질과 안전성을 보증합니다.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 숫자 섹션 — 풀와이드 대형 숫자 -->
  <section class="reveal relative overflow-hidden bg-[#0A0E1A] px-4 py-24 text-white sm:px-6 lg:px-8 md:py-32">
    <div class="absolute left-1/4 top-1/3 h-[400px] w-[400px] rounded-full bg-blue-900/30 blur-[120px]"></div>
    <div class="relative mx-auto max-w-7xl">
      <p class="text-center text-xs uppercase tracking-[0.3em] text-blue-400">Sustained Growth</p>
      <p class="mt-2 text-center text-slate-400">브리츠메디의 성장을 확인하세요</p>
      <div class="reveal-stagger mt-16 grid grid-cols-2 gap-8 md:grid-cols-4">
        {[
          { number: '40', unit: '개국+', label: '파트너 국가' },
          { number: '3', unit: '종', label: '트리플 인증' },
          { number: '15', unit: '건+', label: '특허 보유' },
          { number: '50K', unit: '+', label: '글로벌 시술' },
        ].map((stat, i) => (
          <div class="relative text-center">
            <p class="text-6xl font-bold italic tracking-tight text-white md:text-7xl lg:text-8xl">
              {stat.number}<span class="text-2xl text-blue-400">{stat.unit}</span>
            </p>
            <p class="mt-3 text-sm tracking-wider text-slate-500">{stat.label}</p>
            {i < 3 && <div class="absolute right-0 top-1/4 hidden h-1/2 w-px bg-slate-700 md:block"></div>}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA 섹션 -->
  <section class="reveal relative overflow-hidden bg-gradient-to-r from-blue-700 via-blue-600 to-indigo-700 px-4 py-20 sm:px-6 lg:px-8 md:py-28">
    <div class="absolute -right-20 -top-20 h-[300px] w-[300px] rounded-full bg-white/5 blur-[80px]"></div>
    <div class="relative mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold leading-tight text-white md:text-4xl lg:text-5xl">함께 성장할 파트너를 찾고 있습니다</h2>
      <p class="mt-4 text-lg text-blue-100">브리츠메디의 기술력을 직접 경험해보세요</p>
      <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a href="/contact" class="rounded-full bg-white px-10 py-4 text-base font-semibold text-blue-700 transition-all hover:shadow-xl">
          무료 상담 신청
        </a>
        <a href="/products" class="rounded-full border-2 border-white px-10 py-4 text-base font-semibold text-white transition-all hover:bg-white/10">
          카탈로그 요청
        </a>
      </div>
    </div>
  </section>

  <!-- 최신 소식 — 뉴스룸 스타일 -->
  <section class="reveal px-4 py-20 sm:px-6 lg:px-8 md:py-28">
    <div class="mx-auto max-w-7xl">
      <div class="flex items-end justify-between">
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 md:text-4xl">News Room</h2>
          <p class="mt-1 text-slate-500">브리츠메디의 최신 소식</p>
        </div>
        <a href="/blog" class="text-sm font-semibold text-slate-900 transition-colors hover:text-blue-700">더보기 &rarr;</a>
      </div>
      <div class="mt-12 divide-y divide-slate-200">
        {latestPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group -mx-6 flex items-center justify-between rounded-xl px-6 py-6 transition-colors hover:bg-slate-50">
            <div class="flex items-center gap-4">
              <span class="rounded-full bg-blue-50 px-3 py-1 text-xs font-medium text-blue-600">{post.categoryLabel}</span>
              <span class="text-base font-medium text-slate-900 transition-colors group-hover:text-blue-700 md:text-lg">{post.title}</span>
            </div>
            <span class="hidden text-sm text-slate-400 sm:block">{post.publishedAt}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- 인증 로고 바 -->
  <section class="border-t border-slate-100 bg-slate-50 px-4 py-12 sm:px-6 lg:px-8">
    <p class="mb-8 text-center text-xs uppercase tracking-wider text-slate-400">Trusted by</p>
    <div class="flex flex-wrap items-center justify-center gap-12 md:gap-16">
      {['FDA', 'CE', 'ISO 13485', 'KFDA'].map((cert) => (
        <span class="text-xl font-bold tracking-wider text-slate-300 transition-colors hover:text-slate-600">{cert}</span>
      ))}
    </div>
    <p class="mt-6 text-center text-sm text-slate-400">40개국+ 글로벌 파트너 네트워크</p>
  </section>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <UpdateDate />
  </div>
</BaseLayout>
