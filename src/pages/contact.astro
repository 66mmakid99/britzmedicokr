---
import BaseLayout from '@layouts/BaseLayout.astro';
import SchemaOrg from '@components/aeo/SchemaOrg.astro';
import PageHero from '@components/common/PageHero.astro';
import UpdateDate from '@components/common/UpdateDate.astro';
import RelatedContent from '@components/common/RelatedContent.astro';
import ContactForm from '@components/interactive/ContactForm.tsx';
import { company } from '@data/company';

const contactSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: company.name,
  alternateName: company.nameKo,
  url: company.url,
  address: {
    '@type': 'PostalAddress',
    streetAddress: '상대원동 둔촌대로388 크란츠테크노 1211호',
    addressLocality: '성남',
    addressRegion: '경기도 성남시',
    addressCountry: 'KR',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'sales',
    availableLanguage: ['Korean', 'English'],
  },
};
---

<BaseLayout>
  <SchemaOrg schema={contactSchema} slot="head" />

  <PageHero
    title="상담 신청"
    subtitle="제품 상담, 파트너십, 기술 문의 등 무엇이든 환영합니다"
    breadcrumb={[{ name: '문의', href: '/contact' }]}
  />

  <!-- Section 1: 2-column layout (white) -->
  <section class="bg-white py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <p class="mb-12 text-lg leading-relaxed text-zinc-600">
        브리츠메디에 문의하세요. 제품 상담, 파트너십, 기술 문의 등 무엇이든 환영합니다.
      </p>

      <div class="grid gap-10 lg:grid-cols-2">
        <!-- Left: 연락처 정보 -->
        <div>
          <h2 class="mb-6 text-2xl font-bold text-zinc-900">연락처 정보</h2>
          <div class="space-y-4">
            <!-- 회사명 -->
            <div class="flex items-start gap-4 rounded-2xl border border-zinc-100 bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md">
              <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-zinc-50 text-zinc-600">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" /></svg>
              </span>
              <div>
                <p class="text-sm font-medium text-zinc-500">회사명</p>
                <p class="font-semibold text-zinc-900">(주)브리츠메디 / BRITZMEDI Co., Ltd.</p>
              </div>
            </div>
            <!-- 주소 -->
            <div class="flex items-start gap-4 rounded-2xl border border-zinc-100 bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md">
              <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-zinc-50 text-zinc-600">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
              </span>
              <div>
                <p class="text-sm font-medium text-zinc-500">주소</p>
                <p class="font-semibold text-zinc-900">경기도 성남시 상대원동 둔촌대로388</p>
                <p class="text-sm text-zinc-500">크란츠테크노 1211호</p>
              </div>
            </div>
            <!-- 이메일 -->
            <div class="flex items-start gap-4 rounded-2xl border border-zinc-100 bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md">
              <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-zinc-50 text-zinc-600">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
              </span>
              <div>
                <p class="text-sm font-medium text-zinc-500">이메일</p>
                <a href="mailto:info@britzmedi.co.kr" class="font-semibold text-teal-600 hover:underline">info@britzmedi.co.kr</a>
              </div>
            </div>
            <!-- 영문 사이트 -->
            <div class="flex items-start gap-4 rounded-2xl border border-zinc-100 bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md">
              <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-zinc-50 text-zinc-600">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5a17.92 17.92 0 01-8.716-2.247m0 0A8.966 8.966 0 013 12c0-1.777.516-3.434 1.404-4.832" /></svg>
              </span>
              <div>
                <p class="text-sm font-medium text-zinc-500">영문 사이트</p>
                <a href="https://www.britzmedi.com" target="_blank" rel="noopener" class="font-semibold text-teal-600 hover:underline">www.britzmedi.com</a>
              </div>
            </div>
          </div>

          <!-- 영업 시간 -->
          <div class="mt-6 rounded-2xl border border-zinc-100 bg-white p-6 shadow-sm">
            <h3 class="mb-4 text-lg font-bold text-zinc-900">영업 시간</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-zinc-500">월요일 -- 금요일</span>
                <span class="font-medium text-zinc-900">09:00 -- 18:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-zinc-500">토요일 / 일요일 / 공휴일</span>
                <span class="font-medium text-red-500">휴무</span>
              </div>
            </div>
          </div>

          <!-- 빠른 문의 버튼 -->
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a href="mailto:info@britzmedi.co.kr" class="flex-1 rounded-xl bg-teal-600 py-3.5 text-center font-semibold text-white shadow-sm transition-all duration-300 hover:bg-teal-500 hover:shadow-md">
              이메일 문의
            </a>
          </div>
        </div>

        <!-- Right: 간편 문의 폼 -->
        <div>
          <h2 class="mb-6 text-2xl font-bold text-zinc-900">빠른 문의</h2>
          <div class="rounded-2xl border border-zinc-100 bg-white p-6 shadow-sm md:p-8">
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: 지도 영역 (zinc-50) -->
  <section class="bg-zinc-50 py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="mb-6 text-2xl font-bold text-zinc-900">오시는 길</h2>
      <div class="h-80 w-full overflow-hidden rounded-2xl border border-zinc-100 shadow-sm">
        <iframe
          src="https://www.google.com/maps?q=경기도+성남시+둔촌대로+388&output=embed"
          width="100%"
          height="100%"
          style="border:0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="브리츠메디 본사 위치"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- Section 3: Related + UpdateDate (white) -->
  <section class="bg-white py-16 md:py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <RelatedContent items={[
        { title: '파트너십 문의', href: '/support/partnership', description: '해외/국내 파트너십 문의' },
        { title: '제품 라인업', href: '/products', description: '브리츠메디 전체 제품 보기' },
        { title: '기업소개', href: '/about', description: '브리츠메디 회사 소개' },
      ]} />

      <UpdateDate />
    </div>
  </section>
</BaseLayout>
