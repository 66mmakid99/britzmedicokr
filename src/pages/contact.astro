---
import BaseLayout from '@layouts/BaseLayout.astro';
import SchemaOrg from '@components/aeo/SchemaOrg.astro';
import PageHero from '@components/common/PageHero.astro';
import UpdateDate from '@components/common/UpdateDate.astro';
import RelatedContent from '@components/common/RelatedContent.astro';
import { company } from '@data/company';

const contactSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: company.name,
  alternateName: company.nameKo,
  url: company.url,
  address: {
    '@type': 'PostalAddress',
    addressLocality: '서울',
    addressRegion: '서울특별시',
    addressCountry: 'KR',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'sales',
    availableLanguage: ['Korean', 'English'],
  },
};
---

<BaseLayout>
  <SchemaOrg schema={contactSchema} slot="head" />

  <PageHero
    title="상담 신청"
    subtitle="제품 상담, 파트너십, 기술 문의 등 무엇이든 환영합니다"
    breadcrumb={[{ name: '문의', href: '/contact' }]}
  />

  <!-- Section 1: 2-column layout (white) -->
  <section class="bg-white py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <p class="mb-12 text-lg leading-relaxed text-slate-600">
        브리츠메디에 문의하세요. 제품 상담, 파트너십, 기술 문의 등 무엇이든 환영합니다.
      </p>

      <div class="grid gap-10 lg:grid-cols-2">
        <!-- Left: 연락처 정보 -->
        <div>
          <h2 class="mb-6 text-2xl font-bold text-slate-900">연락처 정보</h2>
          <div class="space-y-4">
            {[
              { icon: '\u{1F3E2}', label: '회사명', value: '(주)브리츠메디 / BRITZMEDI Co., Ltd.' },
              { icon: '\u{1F4CD}', label: '주소', value: '서울특별시' },
              { icon: '\u{1F4E7}', label: '이메일', value: 'info@britzmedi.co.kr', href: 'mailto:info@britzmedi.co.kr' },
              { icon: '\u{1F4AC}', label: '카카오톡', value: '카카오톡 채널 상담', href: 'https://pf.kakao.com/_MdCLG' },
              { icon: '\u{1F310}', label: '영문 사이트', value: 'www.britzmedi.com', href: 'https://www.britzmedi.com' },
            ].map((item) => (
              <div class="flex items-start gap-4 rounded-2xl border border-slate-100 bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md">
                <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-slate-50 text-xl">{item.icon}</span>
                <div>
                  <p class="text-sm font-medium text-slate-500">{item.label}</p>
                  {item.href ? (
                    <a href={item.href} class="font-semibold text-blue-700 hover:underline" target={item.href.startsWith('http') ? '_blank' : undefined} rel={item.href.startsWith('http') ? 'noopener' : undefined}>
                      {item.value}
                    </a>
                  ) : (
                    <p class="font-semibold text-slate-900">{item.value}</p>
                  )}
                </div>
              </div>
            ))}
          </div>

          <!-- 영업 시간 -->
          <div class="mt-6 rounded-2xl border border-slate-100 bg-white p-6 shadow-sm">
            <h3 class="mb-4 text-lg font-bold text-slate-900">영업 시간</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-slate-500">월요일 -- 금요일</span>
                <span class="font-medium text-slate-900">09:00 -- 18:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-slate-500">토요일 / 일요일 / 공휴일</span>
                <span class="font-medium text-red-500">휴무</span>
              </div>
            </div>
          </div>

          <!-- 빠른 문의 버튼 -->
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a href="https://pf.kakao.com/_MdCLG" target="_blank" rel="noopener" class="flex-1 rounded-xl bg-[#FEE500] py-3.5 text-center font-semibold text-[#3C1E1E] shadow-sm transition-all duration-300 hover:bg-[#FDD800] hover:shadow-md">
              카카오톡 상담
            </a>
            <a href="mailto:info@britzmedi.co.kr" class="flex-1 rounded-xl bg-blue-700 py-3.5 text-center font-semibold text-white shadow-sm transition-all duration-300 hover:bg-blue-800 hover:shadow-md">
              이메일 문의
            </a>
          </div>
        </div>

        <!-- Right: 간편 문의 폼 -->
        <div>
          <h2 class="mb-6 text-2xl font-bold text-slate-900">빠른 문의</h2>
          <form class="space-y-5 rounded-2xl border border-slate-100 bg-white p-6 shadow-sm md:p-8">
            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label for="company" class="mb-1.5 block text-sm font-medium text-slate-700">회사명 *</label>
                <input type="text" id="company" name="company" required class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="회사명 입력" />
              </div>
              <div>
                <label for="name" class="mb-1.5 block text-sm font-medium text-slate-700">담당자명 *</label>
                <input type="text" id="name" name="name" required class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="이름 입력" />
              </div>
            </div>
            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label for="email" class="mb-1.5 block text-sm font-medium text-slate-700">이메일 *</label>
                <input type="email" id="email" name="email" required class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="email@example.com" />
              </div>
              <div>
                <label for="phone" class="mb-1.5 block text-sm font-medium text-slate-700">전화번호 *</label>
                <input type="tel" id="phone" name="phone" required class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="010-0000-0000" />
              </div>
            </div>
            <div>
              <label for="product" class="mb-1.5 block text-sm font-medium text-slate-700">관심 제품</label>
              <select id="product" name="product" class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                <option value="">선택해 주세요</option>
                <option value="torr-rf">TORR RF</option>
                <option value="ulblanc">ULBLANC</option>
                <option value="newchae">NEWCHAE</option>
                <option value="lumino-wave">LUMINO WAVE</option>
                <option value="other">기타</option>
              </select>
            </div>
            <div>
              <label for="message" class="mb-1.5 block text-sm font-medium text-slate-700">문의 내용</label>
              <textarea id="message" name="message" rows="4" class="w-full rounded-xl border border-slate-200 px-4 py-3 text-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="문의 내용을 입력해 주세요"></textarea>
            </div>
            <button type="submit" class="w-full rounded-xl bg-blue-700 py-4 font-semibold text-white shadow-sm transition-all duration-300 hover:bg-blue-800 hover:shadow-md">
              문의하기
            </button>
            <p class="text-center text-xs text-slate-500">
              제출 시 <a href="/privacy" class="underline hover:text-slate-900">개인정보처리방침</a>에 동의합니다.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: 지도 영역 (slate-50) -->
  <section class="bg-slate-50 py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="mb-6 text-2xl font-bold text-slate-900">오시는 길</h2>
      <div class="flex h-80 items-center justify-center rounded-2xl border border-slate-100 bg-slate-100 shadow-sm">
        <div class="text-center text-slate-500">
          <p class="mb-2 text-4xl">&#x1F4CD;</p>
          <p class="font-medium">지도 준비 중</p>
          <p class="text-sm">(네이버 지도 또는 카카오맵 임베드 예정)</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Related + UpdateDate (white) -->
  <section class="bg-white py-16 md:py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <RelatedContent items={[
        { title: '파트너십 문의', href: '/support/partnership', description: '해외/국내 파트너십 문의' },
        { title: '제품 라인업', href: '/products', description: '브리츠메디 전체 제품 보기' },
        { title: '기업소개', href: '/about', description: '브리츠메디 회사 소개' },
      ]} />

      <UpdateDate />
    </div>
  </section>
</BaseLayout>
