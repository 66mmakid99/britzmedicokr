---
import BaseLayout from '@layouts/BaseLayout.astro';
import PageHero from '@components/common/PageHero.astro';
import UpdateDate from '@components/common/UpdateDate.astro';
import RelatedContent from '@components/common/RelatedContent.astro';
import ContactForm from '@components/interactive/ContactForm.tsx';
---

<BaseLayout
  title="일반 문의 | 브리츠메디 — 무엇이든 물어보세요"
  description="브리츠메디 제품, 서비스, 기술에 대한 모든 문의를 접수합니다. 전문 상담팀이 빠르게 답변 드립니다."
>
  <PageHero
    title="일반 문의 — 무엇이든 물어보세요"
    breadcrumb={[
      { name: '고객지원', href: '/support' },
      { name: '일반 문의', href: '/support/inquiry' },
    ]}
  />

  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- 2-column: left description + right form -->
    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Left: description -->
      <div>
        <p class="mb-8 text-lg leading-relaxed text-neutral-600">
          브리츠메디 제품, 서비스, 기술, 가격 등 궁금한 사항이 있으시면 문의 폼을 통해 접수해 주세요. 전문 상담팀이 영업일 기준 1~2일 이내에 답변 드리겠습니다.
        </p>

        <!-- 다른 연락 방법 -->
        <div class="rounded-2xl bg-neutral-50 p-6 md:p-8">
          <h2 class="mb-4 text-xl font-bold text-neutral-900">다른 연락 방법</h2>
          <div class="space-y-5">
            <div>
              <p class="mb-1 text-sm font-semibold text-neutral-900">이메일</p>
              <a href="mailto:info@britzmedi.co.kr" class="text-sm text-[#B8960C] hover:underline">
                info@britzmedi.co.kr
              </a>
            </div>
            <div>
              <p class="mb-1 text-sm font-semibold text-neutral-900">영업시간</p>
              <p class="text-sm text-neutral-600">월~금 09:00 - 18:00 (공휴일 제외)</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: form -->
      <div>
        <h2 class="mb-6 text-2xl font-bold text-neutral-900">문의하기</h2>
        <div class="rounded-2xl border border-neutral-200 bg-white p-6 md:p-8">
          <ContactForm client:load />
        </div>
      </div>
    </div>

    <UpdateDate />

    <RelatedContent items={[
      { title: '파트너십 문의', href: '/support/partnership', description: '디스트리뷰터, 클리닉 파트너, 기술 협력에 관심이 있으시다면 파트너십 페이지를 방문하세요.' },
      { title: '제품 라인업', href: '/products', description: '브리츠메디의 전체 제품 라인업을 확인하세요.' },
      { title: '회사 소개', href: '/company', description: '브리츠메디의 비전, 연혁, 인증 현황을 확인하세요.' },
    ]} />
  </div>
</BaseLayout>
