---
interface Props {
  content: string;
  title?: string;
}

const { content, title = '한눈에 보기' } = Astro.props;
---

<aside class="my-8 rounded-r-2xl border-l-4 border-blue-500 bg-blue-50 p-6">
  <p class="mb-2 text-xs font-bold uppercase tracking-wider text-blue-700">핵심 요약</p>
  <p class="text-base leading-relaxed text-slate-700">{content}</p>
</aside>
