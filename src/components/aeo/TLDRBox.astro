---
interface Props {
  content: string;
  title?: string;
}

const { content, title = '한눈에 보기' } = Astro.props;
---

<aside class="my-8 rounded-r-xl border-l-4 border-[#B8960C] bg-[#F5F0E1] p-6">
  <p class="mb-2 text-xs font-bold uppercase tracking-wider text-[#B8960C]">핵심 요약</p>
  <p class="text-base leading-relaxed text-neutral-700">{content}</p>
</aside>
