---
interface Props {
  content: string;
  title?: string;
}

const { content, title = '한눈에 보기' } = Astro.props;
---

<aside class="my-8 rounded-r-xl border-l-4 border-teal-500 bg-zinc-100 p-6">
  <p class="mb-2 text-xs font-bold uppercase tracking-wider text-teal-600">핵심 요약</p>
  <p class="text-base leading-relaxed text-zinc-700">{content}</p>
</aside>
