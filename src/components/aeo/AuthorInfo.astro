---
interface Props {
  name?: string;
  role?: string;
}

const { name = '브리츠메디 연구소', role = 'Technical Team' } = Astro.props;
---

<div class="my-6 flex items-center gap-3 rounded-lg bg-surface px-5 py-3">
  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-secondary text-sm font-bold text-white">
    {name.charAt(0)}
  </div>
  <div>
    <p class="font-semibold text-primary">{name}</p>
    <p class="text-sm text-text-muted">{role}</p>
  </div>
</div>
