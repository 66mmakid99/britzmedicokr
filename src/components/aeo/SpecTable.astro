---
interface Props {
  specs: { label: string; value: string; unit?: string }[];
}

const { specs } = Astro.props;
---

<div class="my-8 overflow-hidden rounded-lg border border-gray-200">
  <table class="w-full text-sm">
    <tbody>
      {specs.map((spec, i) => (
        <tr class={i % 2 === 0 ? 'bg-white' : 'bg-surface'}>
          <td class="w-1/3 px-5 py-3 font-medium text-primary">{spec.label}</td>
          <td class="px-5 py-3 text-text">
            {spec.value}{spec.unit && <span class="ml-1 text-text-muted">{spec.unit}</span>}
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
