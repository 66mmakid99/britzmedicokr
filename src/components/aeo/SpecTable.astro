---
interface Props {
  specs: { label: string; value: string; unit?: string }[];
}

const { specs } = Astro.props;
---

<div class="my-8 overflow-hidden rounded-2xl border border-zinc-200">
  <table class="w-full text-sm">
    <tbody>
      {specs.map((spec, i) => (
        <tr class={i % 2 === 0 ? 'bg-white' : 'bg-zinc-50'}>
          <td class="w-1/3 px-6 py-4 font-medium text-zinc-900">{spec.label}</td>
          <td class="px-6 py-4 text-zinc-600">
            {spec.value}{spec.unit && <span class="ml-1 text-zinc-400">{spec.unit}</span>}
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
