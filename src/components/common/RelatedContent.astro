---
interface Props {
  items: { title: string; href: string; description?: string }[];
  title?: string;
}

const { items, title = '관련 콘텐츠' } = Astro.props;
---

{items.length > 0 && (
  <section class="my-12">
    <h2 class="mb-6 text-2xl font-bold text-zinc-900">{title}</h2>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <a href={item.href} class="group rounded-2xl border border-zinc-200 bg-white p-5 transition-all duration-300 hover:-translate-y-0.5 hover:shadow-md">
          <p class="font-semibold text-zinc-900 group-hover:text-zinc-400">{item.title}</p>
          {item.description && (
            <p class="mt-2 text-sm text-zinc-500">{item.description}</p>
          )}
        </a>
      ))}
    </div>
  </section>
)}
