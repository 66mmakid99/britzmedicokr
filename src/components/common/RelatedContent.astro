---
interface Props {
  items: { title: string; href: string; description?: string }[];
  title?: string;
}

const { items, title = '관련 콘텐츠' } = Astro.props;
---

{items.length > 0 && (
  <section class="my-12">
    <h2 class="mb-6 text-2xl font-bold text-primary">{title}</h2>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <a href={item.href} class="group rounded-lg border border-gray-200 p-5 hover:border-secondary hover:shadow-md">
          <p class="font-semibold text-primary group-hover:text-secondary">{item.title}</p>
          {item.description && (
            <p class="mt-2 text-sm text-text-muted">{item.description}</p>
          )}
        </a>
      ))}
    </div>
  </section>
)}
