---
import { company } from '@data/company';
import { currentYear } from '@lib/utils';
import TrustBadge from './TrustBadge.astro';
---

<TrustBadge />

<footer class="border-t border-gray-200 bg-primary text-white">
  <div class="mx-auto max-w-[1280px] px-4 py-12 md:px-8">
    <div class="grid gap-8 md:grid-cols-4">
      <!-- 회사 정보 -->
      <div class="md:col-span-2">
        <p class="mb-3 text-lg font-bold">{company.name}</p>
        <p class="text-sm leading-relaxed text-gray-300">
          {company.description}
        </p>
        <div class="mt-4 space-y-1 text-sm text-gray-400">
          <p>서울특별시</p>
          <p>
            <a href={`mailto:${company.contact.email || 'info@britzmedi.co.kr'}`} class="hover:text-white">
              {company.contact.email || 'info@britzmedi.co.kr'}
            </a>
          </p>
        </div>
      </div>

      <!-- 빠른 링크 -->
      <div>
        <p class="mb-3 font-semibold">바로가기</p>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="/about" class="hover:text-white">회사소개</a></li>
          <li><a href="/products" class="hover:text-white">제품</a></li>
          <li><a href="/certifications" class="hover:text-white">인증/특허</a></li>
          <li><a href="/blog" class="hover:text-white">블로그</a></li>
          <li><a href="/contact" class="hover:text-white">문의</a></li>
        </ul>
      </div>

      <!-- 제품 -->
      <div>
        <p class="mb-3 font-semibold">제품</p>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="/products/torr-rf" class="hover:text-white">TORR RF</a></li>
          <li><a href="/products/ulblanc" class="hover:text-white">ULBLANC</a></li>
          <li><a href="/products/newchae" class="hover:text-white">NEWCHAE</a></li>
          <li><a href="/products/lumino-wave" class="hover:text-white">LUMINO WAVE</a></li>
        </ul>
      </div>
    </div>

    <!-- 하단 -->
    <div class="mt-10 flex flex-col items-center justify-between gap-4 border-t border-gray-700 pt-6 text-xs text-gray-400 md:flex-row">
      <p>&copy; {currentYear()} {company.name}. All rights reserved.</p>
      <div class="flex gap-4">
        <a href="/privacy" class="hover:text-white">개인정보처리방침</a>
        <a href="/terms" class="hover:text-white">이용약관</a>
        <a href={company.urlEn} class="hover:text-white" target="_blank" rel="noopener">English</a>
      </div>
    </div>
  </div>
</footer>
