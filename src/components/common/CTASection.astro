---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = '함께 성장할 파트너를 찾고 있습니다',
  description = '브리츠메디의 기술력을 직접 경험해보세요',
} = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-r from-[#1C1C1C] via-[#0A0A0A] to-[#171717] px-4 py-20 text-center text-white sm:px-6 lg:px-8 md:py-28">
  <div class="absolute -right-20 -top-20 h-[300px] w-[300px] rounded-full bg-white/5 blur-[80px]"></div>
  <div class="relative mx-auto max-w-3xl">
    <h2 class="text-3xl font-bold leading-tight md:text-4xl lg:text-5xl">{title}</h2>
    <p class="mt-4 text-lg text-neutral-200">{description}</p>
    <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a href="/contact" class="rounded-full bg-white px-10 py-4 text-base font-semibold text-[#B8960C] transition-all hover:shadow-xl">
        무료 상담 신청
      </a>
      <a href="/products" class="rounded-full border-2 border-white px-10 py-4 text-base font-semibold transition-all hover:bg-white/10">
        카탈로그 요청
      </a>
    </div>
  </div>
</section>
