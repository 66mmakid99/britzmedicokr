---
import Breadcrumb from './Breadcrumb.astro';

interface Props {
  title: string;
  subtitle?: string;
  breadcrumb: { name: string; href: string }[];
}

const { title, subtitle, breadcrumb } = Astro.props;
---

<section class="relative overflow-hidden bg-[#0A0E1A] px-4 py-20 sm:px-6 lg:px-8 md:py-28">
  <!-- 배경 글로우 -->
  <div class="absolute -top-20 -left-20 h-[400px] w-[400px] rounded-full bg-blue-600/10 blur-[100px]"></div>
  <div class="absolute -right-20 -bottom-20 h-[300px] w-[300px] rounded-full bg-indigo-500/10 blur-[80px]"></div>

  <div class="relative mx-auto max-w-7xl text-center">
    <div class="mb-4">
      <Breadcrumb items={breadcrumb} theme="dark" />
    </div>
    <h1 class="text-3xl font-bold tracking-tight text-white md:text-4xl lg:text-5xl">
      {title}
    </h1>
    {subtitle && (
      <p class="mx-auto mt-3 max-w-2xl text-base text-slate-400">{subtitle}</p>
    )}
  </div>
</section>
