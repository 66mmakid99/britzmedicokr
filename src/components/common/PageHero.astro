---
import Breadcrumb from './Breadcrumb.astro';

interface Props {
  title: string;
  subtitle?: string;
  breadcrumb: { name: string; href: string }[];
}

const { title, subtitle, breadcrumb } = Astro.props;
---

<section class="border-b border-zinc-100 bg-white px-4 pt-32 pb-12 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <Breadcrumb items={breadcrumb} />
    <h1 class="text-4xl font-bold tracking-tight text-zinc-900 md:text-5xl">
      {title}
    </h1>
    {subtitle && (
      <p class="mt-3 max-w-2xl text-lg text-zinc-500">{subtitle}</p>
    )}
  </div>
</section>
