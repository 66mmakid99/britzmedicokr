---
import { mainNav } from '@data/navigation';

interface Props {
  transparent?: boolean;
}

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<header
  id="site-header"
  class:list={[
    'fixed top-0 z-50 w-full transition-all duration-300',
    isHome ? 'bg-transparent' : 'border-b border-slate-100 bg-white/90 backdrop-blur-xl',
  ]}
  data-home={isHome ? 'true' : 'false'}
>
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8 md:h-20">
    <!-- 로고 -->
    <a href="/" class="flex items-center gap-3">
      <span class:list={['text-lg font-bold tracking-[0.15em] uppercase transition-colors duration-300 md:text-xl', isHome ? 'text-white' : 'text-slate-900']} id="logo-text">BRITZMEDI</span>
      <span class:list={['hidden h-5 w-px sm:block transition-colors duration-300', isHome ? 'bg-white/30' : 'bg-slate-200']} id="logo-divider"></span>
      <span class:list={['hidden text-[10px] tracking-[0.2em] uppercase sm:block transition-colors duration-300', isHome ? 'text-slate-400' : 'text-slate-400']} id="logo-sub">RF Medical Device</span>
    </a>

    <!-- 데스크톱 네비게이션 -->
    <nav class="hidden lg:flex lg:items-center lg:gap-8" aria-label="메인 메뉴">
      {mainNav.map((item) =>
        'children' in item ? (
          <div class="group relative">
            <button class:list={[
              'nav-link flex items-center gap-1 py-2 text-[13px] font-medium tracking-wide transition-colors',
              isHome ? 'text-white/80 hover:text-white' : 'text-slate-600 hover:text-blue-500',
            ]}>
              {item.label}
              <svg class="h-3.5 w-3.5 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="invisible absolute left-0 top-full z-50 min-w-[200px] rounded-xl border border-slate-100 bg-white px-2 py-4 shadow-2xl opacity-0 transition-all group-hover:visible group-hover:opacity-100">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class:list={[
                    'block rounded-lg px-4 py-2.5 text-sm transition-colors hover:bg-slate-50',
                    currentPath === child.href ? 'font-semibold text-blue-700' : 'text-slate-600 hover:text-blue-700',
                  ]}
                >
                  {child.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a
            href={item.href}
            class:list={[
              'nav-link py-2 text-[13px] font-medium tracking-wide transition-colors',
              currentPath === item.href
                ? (isHome ? 'text-white' : 'text-blue-700')
                : (isHome ? 'text-white/80 hover:text-white' : 'text-slate-600 hover:text-blue-500'),
            ]}
          >
            {item.label}
          </a>
        )
      )}
    </nav>

    <!-- CTA + 모바일 토글 -->
    <div class="flex items-center gap-3">
      <a href="/contact" class="hidden rounded-full bg-blue-600 px-5 py-2 text-xs font-semibold tracking-wide text-white transition-all hover:bg-blue-700 sm:inline-block">
        상담 신청
      </a>
      <button id="mobile-menu-toggle" class:list={['rounded-lg p-2 transition-colors lg:hidden', isHome ? 'hover:bg-white/10' : 'hover:bg-slate-50']} aria-label="메뉴 열기">
        <svg id="hamburger-icon" class:list={['h-6 w-6 transition-colors duration-300', isHome ? 'text-white' : 'text-slate-900']} fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- 모바일 풀스크린 메뉴 -->
<div id="mobile-menu" class="fixed inset-0 z-[60] hidden bg-white">
  <div class="flex h-16 items-center justify-between px-4 sm:px-6 md:h-20">
    <span class="text-lg font-bold tracking-[0.15em] uppercase text-slate-900">BRITZMEDI</span>
    <button id="mobile-menu-close" class="rounded-lg p-2 hover:bg-slate-50" aria-label="메뉴 닫기">
      <svg class="h-6 w-6 text-slate-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  <nav class="flex flex-col px-6 pt-8" aria-label="모바일 메뉴">
    {mainNav.map((item) =>
      'children' in item ? (
        <div class="border-b border-slate-100 py-4">
          <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">{item.label}</p>
          <div class="mt-3 space-y-1">
            {item.children.map((child) => (
              <a
                href={child.href}
                class:list={[
                  'block py-2 text-2xl font-light transition-colors hover:text-blue-700',
                  currentPath === child.href ? 'text-blue-700' : 'text-slate-900',
                ]}
              >
                {child.label}
              </a>
            ))}
          </div>
        </div>
      ) : (
        <a
          href={item.href}
          class:list={[
            'border-b border-slate-100 py-4 text-2xl font-light transition-colors hover:text-blue-700',
            currentPath === item.href ? 'text-blue-700' : 'text-slate-900',
          ]}
        >
          {item.label}
        </a>
      )
    )}
    <a href="/contact" class="mt-8 block rounded-full bg-blue-600 py-4 text-center text-base font-semibold text-white transition-colors hover:bg-blue-700">
      상담 신청
    </a>
  </nav>
</div>

<!-- 헤더 높이만큼 spacer (서브페이지용) -->
{!isHome && <div class="h-16 md:h-20"></div>}

<script>
  const header = document.getElementById('site-header');
  const isHome = header?.dataset.home === 'true';
  const logoText = document.getElementById('logo-text');
  const logoDivider = document.getElementById('logo-divider');
  const hamburger = document.getElementById('hamburger-icon');
  const navLinks = document.querySelectorAll('.nav-link');

  if (isHome && header) {
    const onScroll = () => {
      const scrolled = window.scrollY > 50;
      if (scrolled) {
        header.classList.remove('bg-transparent');
        header.classList.add('bg-white/90', 'backdrop-blur-xl', 'border-b', 'border-slate-100', 'shadow-sm');
        logoText?.classList.remove('text-white');
        logoText?.classList.add('text-slate-900');
        logoDivider?.classList.remove('bg-white/30');
        logoDivider?.classList.add('bg-slate-200');
        hamburger?.classList.remove('text-white');
        hamburger?.classList.add('text-slate-900');
        navLinks.forEach(link => {
          link.classList.remove('text-white/80', 'hover:text-white', 'text-white');
          link.classList.add('text-slate-600', 'hover:text-blue-500');
        });
      } else {
        header.classList.add('bg-transparent');
        header.classList.remove('bg-white/90', 'backdrop-blur-xl', 'border-b', 'border-slate-100', 'shadow-sm');
        logoText?.classList.add('text-white');
        logoText?.classList.remove('text-slate-900');
        logoDivider?.classList.add('bg-white/30');
        logoDivider?.classList.remove('bg-slate-200');
        hamburger?.classList.add('text-white');
        hamburger?.classList.remove('text-slate-900');
        navLinks.forEach(link => {
          link.classList.add('text-white/80', 'hover:text-white');
          link.classList.remove('text-slate-600', 'hover:text-blue-500');
        });
      }
    };
    window.addEventListener('scroll', onScroll, { passive: true });
  }

  // 모바일 메뉴
  const toggle = document.getElementById('mobile-menu-toggle');
  const close = document.getElementById('mobile-menu-close');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => menu?.classList.remove('hidden'));
  close?.addEventListener('click', () => menu?.classList.add('hidden'));
</script>
