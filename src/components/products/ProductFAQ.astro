---
interface Props {
  faqs: Array<{ question: string; answer: string }>;
}
const { faqs } = Astro.props;
---

{faqs.length > 0 && (
  <section class="bg-zinc-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-14 lg:py-16">
      <h2 class="text-2xl font-bold text-zinc-900 mb-10">자주 묻는 질문</h2>
      <div class="space-y-3">
        {faqs.map((faq) => (
          <details class="group rounded-2xl border border-zinc-200/60 overflow-hidden bg-white hover:border-teal-200 transition-all duration-300">
            <summary class="flex items-center justify-between px-7 py-5 cursor-pointer hover:bg-zinc-50/50 transition-colors duration-300">
              <span class="text-sm font-semibold text-zinc-900 pr-4">{faq.question}</span>
              <svg class="w-5 h-5 text-zinc-400 flex-shrink-0 group-open:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            </summary>
            <div class="px-7 pb-5 text-sm text-zinc-600 leading-relaxed border-t border-zinc-100 pt-4">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
)}
