---
interface Props {
  faqs: Array<{ question: string; answer: string }>;
}
const { faqs } = Astro.props;
---

{faqs.length > 0 && (
  <section class="bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-14">
      <h2 class="text-2xl font-bold text-zinc-900 mb-8">자주 묻는 질문</h2>
      <div class="space-y-3">
        {faqs.map((faq) => (
          <details class="group border border-zinc-200 rounded-xl overflow-hidden">
            <summary class="flex items-center justify-between px-6 py-4 cursor-pointer hover:bg-zinc-50 transition-colors">
              <span class="text-sm font-medium text-zinc-900 pr-4">{faq.question}</span>
              <svg class="w-5 h-5 text-zinc-400 flex-shrink-0 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-4 text-sm text-zinc-600 leading-relaxed border-t border-zinc-100 pt-4">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
)}
