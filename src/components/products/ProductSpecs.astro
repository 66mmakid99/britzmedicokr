---
import type { ProductSpec } from '@data/products';

interface Props {
  specs: ProductSpec[];
}
const { specs } = Astro.props;
---

<section id="specs" class="bg-zinc-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-14 lg:py-16">
    <h2 class="text-2xl font-bold text-zinc-900 mb-10">제품 사양</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
      {specs.map(spec => (
        <div class="bg-white rounded-2xl p-6 border border-zinc-200/60 hover:border-teal-200 hover:-translate-y-0.5 hover:shadow-md transition-all duration-300">
          <p class="text-xs text-zinc-400 font-medium uppercase tracking-wider mb-2">{spec.label}</p>
          <p class="text-base font-bold text-zinc-900">
            {spec.value}{spec.unit ? ` ${spec.unit}` : ''}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
