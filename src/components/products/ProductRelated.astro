---
interface Props {
  items: Array<{ title: string; href: string; description: string }>;
}
const { items } = Astro.props;
---

{items.length > 0 && (
  <section class="product-related">
    <div class="product-section-inner">
      <div class="product-section-label">Related</div>
      <h2 class="product-section-title">관련 콘텐츠</h2>
      <div class="product-related__grid">
        {items.map(item => (
          <a href={item.href} class="product-related__card">
            <div class="product-related__category">{item.description}</div>
            <div class="product-related__title">{item.title}</div>
          </a>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .product-related {
    background: #fafafa;
    padding: 64px 24px;
    border-top: 1px solid #f4f4f5;
  }
  .product-section-inner { max-width: 1280px; margin: 0 auto; }
  .product-section-label {
    font-size: 11px;
    font-weight: 700;
    color: #0d9488;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 8px;
  }
  .product-section-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    color: #18181b;
    letter-spacing: -0.02em;
    margin-bottom: 40px;
  }
  .product-related__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }
  .product-related__card {
    background: white;
    border: 1px solid rgba(228,228,231,0.6);
    border-radius: 16px;
    padding: 24px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
  }
  .product-related__card:hover {
    border-color: rgba(13,148,136,0.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.04);
  }
  .product-related__category {
    font-size: 11px;
    font-weight: 600;
    color: #0d9488;
    margin-bottom: 8px;
  }
  .product-related__title {
    font-size: 14px;
    font-weight: 700;
    color: #18181b;
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    .product-related__grid { grid-template-columns: 1fr; }
  }
</style>
