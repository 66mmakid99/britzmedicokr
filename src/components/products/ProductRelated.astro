---
interface Props {
  items: Array<{ title: string; href: string; description: string }>;
}
const { items } = Astro.props;
---

{items.length > 0 && (
  <section class="bg-zinc-50 border-t border-zinc-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-14">
      <h2 class="text-2xl font-bold text-zinc-900 mb-8">관련 콘텐츠</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {items.map(item => (
          <a href={item.href} class="group block p-6 bg-white rounded-2xl border border-zinc-200/60 hover:border-teal-200 hover:-translate-y-0.5 hover:shadow-md transition-all duration-300">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-4 h-4 text-teal-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
              <p class="text-sm font-bold text-zinc-900 group-hover:text-teal-600 transition-colors duration-300">{item.title}</p>
            </div>
            <p class="text-sm text-zinc-500">{item.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
)}
