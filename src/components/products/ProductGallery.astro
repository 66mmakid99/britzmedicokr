---
interface Props {
  images: string[];
  videos?: string[];
  productName: string;
}
const { images, videos = [], productName } = Astro.props;
const hasMedia = images.length > 0 || videos.length > 0;
---

{hasMedia && (
  <section class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-14 lg:py-16">
      <h2 class="text-2xl font-bold text-zinc-900 mb-10">제품 갤러리</h2>
      <div class="grid grid-cols-2 lg:grid-cols-3 gap-5">
        {videos.map((video, i) => (
          <div class={`relative rounded-2xl overflow-hidden bg-zinc-100 ${i === 0 ? 'col-span-2 row-span-2' : ''}`}>
            <video
              src={video}
              controls
              muted
              playsinline
              preload="metadata"
              class="w-full h-full object-cover"
            />
          </div>
        ))}
        {images.map((img, i) => (
          <div class="relative rounded-2xl overflow-hidden bg-zinc-50 border border-zinc-200/60 aspect-square hover:-translate-y-0.5 hover:shadow-md transition-all duration-300">
            <img
              src={img}
              alt={`${productName} 상세 이미지 ${i + 1}`}
              class="w-full h-full object-contain p-5"
              loading="lazy"
              decoding="async"
            />
          </div>
        ))}
      </div>
    </div>
  </section>
)}
