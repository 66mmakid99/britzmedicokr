---
interface Props {
  images: string[];
  videos?: string[];
  productName: string;
}
const { images, videos = [], productName } = Astro.props;
const hasMedia = images.length > 0 || videos.length > 0;
---

{hasMedia && (
  <section class="bg-zinc-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-14">
      <h2 class="text-2xl font-bold text-zinc-900 mb-8">제품 갤러리</h2>
      <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
        {videos.map((video, i) => (
          <div class={`relative rounded-xl overflow-hidden ${i === 0 ? 'col-span-2 row-span-2' : ''}`}>
            <video
              src={video}
              controls
              muted
              playsinline
              preload="metadata"
              class="w-full h-full object-cover"
            />
          </div>
        ))}
        {images.map((img, i) => (
          <div class="relative rounded-xl overflow-hidden bg-white border border-zinc-200 aspect-square">
            <img
              src={img}
              alt={`${productName} 상세 이미지 ${i + 1}`}
              class="w-full h-full object-contain p-4"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </section>
)}
