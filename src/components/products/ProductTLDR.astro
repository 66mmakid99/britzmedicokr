---
interface Props {
  content: string;
}
const { content } = Astro.props;
---

<section class="bg-teal-50/50 border-y border-teal-100">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-12">
    <div class="flex gap-5">
      <div class="flex-shrink-0 w-1 bg-teal-500 rounded-full"></div>
      <div>
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-4 h-4 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
          </svg>
          <p class="text-xs font-bold text-teal-700 uppercase tracking-widest">TL;DR</p>
        </div>
        <p class="text-base text-zinc-700 leading-relaxed">{content}</p>
      </div>
    </div>
  </div>
</section>
