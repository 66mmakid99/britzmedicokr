---
interface Props {
  content: string;
}
const { content } = Astro.props;
---

<section class="product-tldr">
  <div class="product-tldr__inner">
    <div class="product-tldr__bar"></div>
    <div>
      <div class="product-tldr__label">핵심 요약</div>
      <p class="product-tldr__text">{content}</p>
    </div>
  </div>
</section>

<style>
  .product-tldr {
    background: linear-gradient(135deg, rgba(240,253,250,0.5), rgba(204,251,241,0.15));
    border-top: 1px solid rgba(13,148,136,0.08);
    border-bottom: 1px solid rgba(13,148,136,0.08);
  }
  .product-tldr__inner {
    max-width: 860px;
    margin: 0 auto;
    padding: 48px 24px;
    display: flex;
    gap: 20px;
  }
  .product-tldr__bar {
    flex-shrink: 0;
    width: 3px;
    background: linear-gradient(to bottom, #14b8a6, #2dd4bf);
    border-radius: 4px;
  }
  .product-tldr__label {
    font-size: 10px;
    font-weight: 700;
    color: #0d9488;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 8px;
  }
  .product-tldr__text {
    font-size: 15px;
    color: #3f3f46;
    line-height: 1.8;
  }
</style>
