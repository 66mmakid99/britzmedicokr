---
interface Props {
  certifications: Array<{ name: string; number: string; date: string }>;
}
const { certifications } = Astro.props;
---

<section class="bg-zinc-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-2xl font-bold text-white mb-6">인증 현황</h2>
    <div class="flex flex-wrap gap-4">
      {certifications.map(cert => (
        <div class="flex items-center gap-3 px-5 py-3 bg-white/5 rounded-xl border border-zinc-700/50">
          <div class="w-8 h-8 bg-teal-500/10 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-zinc-200">{cert.name}</p>
            {cert.date && <p class="text-xs text-zinc-500">{cert.date}</p>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
