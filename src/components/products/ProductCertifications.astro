---
interface Props {
  certifications: Array<{ name: string; number: string; date: string }>;
}
const { certifications } = Astro.props;
---

<section class="product-certs">
  <div class="product-section-inner">
    <div class="product-section-label">Certifications</div>
    <h2 class="product-section-title">인증 현황</h2>
    <div class="product-cert-grid">
      {certifications.map(cert => (
        <div class="product-cert-badge">
          <div class="product-cert-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          </div>
          <div>
            <div class="product-cert-name">{cert.name}</div>
            {cert.date && <div class="product-cert-desc">{cert.date}</div>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .product-certs {
    background: white;
    padding: 64px 24px;
    border-top: 1px solid #f4f4f5;
  }
  .product-section-inner { max-width: 1280px; margin: 0 auto; }
  .product-section-label {
    font-size: 11px;
    font-weight: 700;
    color: #0d9488;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 8px;
  }
  .product-section-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    color: #18181b;
    letter-spacing: -0.02em;
    margin-bottom: 40px;
  }
  .product-cert-grid { display: flex; gap: 16px; flex-wrap: wrap; }
  .product-cert-badge {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 16px 24px;
    background: #fafafa;
    border: 1px solid #e4e4e7;
    border-radius: 14px;
    transition: all 0.3s ease;
  }
  .product-cert-badge:hover {
    border-color: rgba(13,148,136,0.2);
    box-shadow: 0 2px 12px rgba(0,0,0,0.04);
  }
  .product-cert-icon {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #14b8a6, #0d9488);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .product-cert-icon svg { width: 18px; height: 18px; color: white; }
  .product-cert-name { font-size: 14px; font-weight: 700; color: #18181b; }
  .product-cert-desc { font-size: 11px; color: #71717a; margin-top: 1px; }

  @media (max-width: 640px) {
    .product-cert-grid { flex-direction: column; }
  }
</style>
