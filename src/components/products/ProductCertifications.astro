---
interface Props {
  certifications: Array<{ name: string; number: string; date: string }>;
}
const { certifications } = Astro.props;
---

<section class="bg-white border-t border-zinc-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-14">
    <h2 class="text-2xl font-bold text-zinc-900 mb-8">인증 현황</h2>
    <div class="flex flex-wrap gap-4">
      {certifications.map(cert => (
        <div class="flex items-center gap-3 px-5 py-3.5 bg-zinc-50 rounded-2xl border border-zinc-200/60 hover:border-teal-200 hover:-translate-y-0.5 hover:shadow-md transition-all duration-300">
          <div class="w-9 h-9 bg-teal-100 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-4.5 h-4.5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-bold text-zinc-900">{cert.name}</p>
            {cert.date && <p class="text-xs text-zinc-500 mt-0.5">{cert.date}</p>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
