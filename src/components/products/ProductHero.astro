---
interface Props {
  name: string;
  nameKo: string;
  subtitle: string;
  tagline: string;
  firstSentence?: string;
  badge?: string;
  stats: Array<{ value: string; unit: string; label: string }>;
  heroImage: string;
  heroVideo?: string;
}

const { name, nameKo, subtitle, tagline, firstSentence, badge, stats, heroImage, heroVideo } = Astro.props;
---

<section class="relative bg-zinc-950 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-950"></div>
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-teal-950/20 to-transparent"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- 텍스트 -->
      <div class="order-2 lg:order-1">
        {badge && (
          <span class="inline-flex items-center gap-1.5 rounded-full bg-teal-500/10 border border-teal-500/20 px-3 py-1 text-xs font-semibold text-teal-400 mb-4">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            {badge}
          </span>
        )}
        <p class="text-teal-400 text-sm font-semibold tracking-widest uppercase mb-3">{subtitle}</p>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-white tracking-tight mb-1">
          {nameKo}
          <span class="block text-lg lg:text-xl font-medium text-zinc-500 mt-2">{name}</span>
        </h1>
        <p class="text-lg text-zinc-400 leading-relaxed mt-4 mb-8">{tagline}</p>

        {firstSentence && (
          <p class="text-sm text-zinc-500 leading-relaxed mb-8 max-w-lg">{firstSentence}</p>
        )}

        <!-- 핵심 수치 -->
        <div class="flex flex-wrap gap-8 mb-8">
          {stats.map(stat => (
            <div>
              <div class="flex items-baseline gap-1">
                <span class="text-3xl lg:text-4xl font-bold text-white">{stat.value}</span>
                <span class="text-sm text-teal-400 font-medium">{stat.unit}</span>
              </div>
              <p class="text-xs text-zinc-500 mt-1">{stat.label}</p>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="flex flex-wrap gap-3">
          <a href="/contact" class="px-6 py-3 bg-teal-600 text-white text-sm font-medium rounded-lg hover:bg-teal-500 transition-colors">
            상담 신청
          </a>
          <a href="#specs" class="px-6 py-3 border border-zinc-700 text-zinc-300 text-sm font-medium rounded-lg hover:border-zinc-500 hover:text-white transition-colors">
            자세히 보기
          </a>
        </div>
      </div>

      <!-- 제품 이미지 -->
      <div class="relative order-1 lg:order-2">
        {heroVideo ? (
          <video
            src={heroVideo}
            autoplay muted loop playsinline
            poster={heroImage}
            class="w-full max-h-[500px] object-contain drop-shadow-2xl"
          />
        ) : (
          <img
            src={heroImage}
            alt={`${name} 제품 이미지`}
            class="w-full max-h-[500px] object-contain drop-shadow-2xl"
            loading="eager"
          />
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/60 via-transparent to-transparent pointer-events-none"></div>
      </div>
    </div>
  </div>
</section>
