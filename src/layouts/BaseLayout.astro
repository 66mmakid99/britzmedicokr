---
import '@/styles/global.css';
import Header from '@components/common/Header.astro';
import Footer from '@components/common/Footer.astro';
import KakaoChat from '@components/interactive/KakaoChat.astro';
import ChatBot from '@components/interactive/ChatBot.tsx';
import CookieConsent from '@components/interactive/CookieConsent.tsx';
import { company } from '@data/company';
import { pageSEO } from '@data/seo';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  path?: string;
}

const currentPath = Astro.url.pathname;
const seo = pageSEO[currentPath];

const title = Astro.props.title ?? seo?.title ?? `${company.nameKo} | ${company.description}`;
const description = Astro.props.description ?? seo?.description ?? company.description;
const ogImage = Astro.props.ogImage ?? seo?.ogImage ?? '/images/og/home.jpg';
const hreflangs = seo?.hreflangs;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO 기본 -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`${company.url}${currentPath}`} />

    <!-- Open Graph (카카오톡/네이버 공유) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${company.url}${ogImage}`} />
    <meta property="og:url" content={`${company.url}${currentPath}`} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:site_name" content={company.name} />

    <!-- hreflang (다국어) -->
    {hreflangs && (
      <>
        <link rel="alternate" hreflang="ko" href={`${company.url}${hreflangs.ko}`} />
        <link rel="alternate" hreflang="en" href={`${company.urlEn}${hreflangs.en}`} />
        <link rel="alternate" hreflang="x-default" href={`${company.urlEn}${hreflangs.en}`} />
      </>
    )}

    <!-- 파비콘 -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- 폰트 프리로드 -->
    <link rel="preload" href="/fonts/Pretendard-Regular.subset.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Pretendard-Bold.subset.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Schema.org 슬롯 -->
    <slot name="head" />
  </head>
  <body class="flex min-h-dvh flex-col bg-white text-text antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <KakaoChat />
    <ChatBot client:idle />
    <CookieConsent client:idle />
  </body>
</html>
