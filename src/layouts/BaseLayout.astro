---
import '@/styles/global.css';
import Header from '@components/common/Header.astro';
import Footer from '@components/common/Footer.astro';
import ChatBot from '@components/interactive/ChatBot.tsx';
import CookieConsent from '@components/interactive/CookieConsent.tsx';
import { company } from '@data/company';
import { pageSEO } from '@data/seo';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  path?: string;
}

const currentPath = Astro.url.pathname;
const seo = pageSEO[currentPath];

const title = Astro.props.title ?? seo?.title ?? `${company.nameKo} | ${company.description}`;
const description = Astro.props.description ?? seo?.description ?? company.description;
const ogImage = Astro.props.ogImage ?? seo?.ogImage;
const hreflangs = seo?.hreflangs;
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO 기본 -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`${company.url}${currentPath}`} />

    <!-- Open Graph (SNS 공유) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={`${company.url}${ogImage}`} />}
    <meta property="og:url" content={`${company.url}${currentPath}`} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:site_name" content={company.name} />

    <!-- hreflang (다국어) -->
    {hreflangs && (
      <>
        <link rel="alternate" hreflang="ko" href={`${company.url}${hreflangs.ko}`} />
        <link rel="alternate" hreflang="en" href={`${company.urlEn}${hreflangs.en}`} />
        <link rel="alternate" hreflang="x-default" href={`${company.urlEn}${hreflangs.en}`} />
      </>
    )}

    <!-- 파비콘 -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- 폰트 CDN -->
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable-dynamic-subset.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Google Analytics -->
    {gaId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
        <script define:vars={{ gaId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}

    <!-- Schema.org 슬롯 -->
    <slot name="head" />
  </head>
  <body class="flex min-h-dvh flex-col bg-white text-text antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <ChatBot client:idle />
    <CookieConsent client:idle />

    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
      document.querySelectorAll('.reveal, .reveal-stagger').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
